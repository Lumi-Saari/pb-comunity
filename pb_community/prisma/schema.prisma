generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId   String   @id @db.VarChar(255)  // sub が直接入る
  username String   @unique @db.VarChar(255)
  activityPlace String?  @db.VarChar(255)  // 活動場所（例：東京、オンライン、学校名など）
  bio           String?  @db.Text          // 一言（自己紹介やステータス）
  createdAt     DateTime @default(now())
  isDeleted    Boolean @default(false)
  Private     Private[]
  Room        Room[]
  RoomPost    RoomPost[]
  PrivatePost PrivatePost[]
  PrivateMember  PrivateMember[]
  UserRoomSetting UserRoomSetting[]
  Notification    Notification[]
  iconUrl        String?
  
  @@map(name: "users")
}

model Image {
  id           Int      @id @default(autoincrement())
  userId       String
  fileName     String
  originalName String
  width        Int
  height       Int
  size         Int
  createdAt    DateTime @default(now())
}



model Room {
  roomId    String   @id @default(uuid())
  roomName  String   @db.VarChar(255)
  memo      String   @db.Text
  createBy  String
  user      User     @relation(fields: [createBy], references: [userId])
  updatedAt DateTime @updatedAt
  RoomPost  RoomPost[]
  Setting   UserRoomSetting []

  @@map(name: "rooms")
}

model Private {
  privateId   String        @id @default(uuid())
  privateName String        @db.VarChar(255)
  memo        String        @db.Text
  createBy    String
  user        User          @relation(fields: [createBy], references: [userId])
  updatedAt   DateTime      @updatedAt
  PrivatePost PrivatePost[]
  members     PrivateMember[]
  Setting     UserRoomSetting[]

  @@map(name: "privates")
}

model PrivateMember {
  id          String @id @default(uuid())
  privateId   String 
  userId      String
  joinedAt    DateTime @default(now())

  private Private @relation(fields: [privateId], references: [privateId])
  user User       @relation(fields: [userId], references: [userId])     

  @@unique([privateId, userId]).
}

model RoomPost {
  postId    String   @id @default(uuid())
  roomId    String
  userId    String
  content   String   @db.Text
  createdAt DateTime @default(now())
  isDeleted Boolean  @default(false) // 管理者が削除したら true
  imageUrl     String?
  thumbnailUrl String?

  parentId      String?
  parent        RoomPost? @relation("Reply", fields: [parentId], references: [postId])
  replies       RoomPost[] @relation("Reply") 

  room Room @relation(fields: [roomId], references: [roomId])
  user User @relation(fields: [userId], references: [userId])
}

model PrivatePost {
  postId    String   @id @default(uuid())
  privateId String
  userId    String
  content   String   @db.Text
  createdAt DateTime @default(now())
  isDeleted Boolean  @default(false)
  imageUrl     String?  
  thumbnailUrl String? 

  parentId      String?                          // ← 追加（返信先）
  parent        PrivatePost? @relation("Reply", fields: [parentId], references: [postId])
  replies       PrivatePost[] @relation("Reply") 

  private Private @relation(fields: [privateId], references: [privateId])
  user    User    @relation(fields: [userId], references: [userId])

  @@map("private_posts")
}

model UserRoomSetting {
  id        Int      @id @default(autoincrement())
  userId    String
  roomId    String?
  privateId String?
  notify    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [userId])
  room     Room?    @relation(fields: [roomId], references: [roomId])
  private  Private? @relation(fields: [privateId], references: [privateId])

  @@unique([userId, roomId, privateId])
  @@unique([userId, privateId], name: "userId_privateId")
  @@unique([userId, roomId], name: "userId_roomId")
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    String   // 通知を受け取る人
  message   String
  url       String?  // 通知をクリックしたときに飛ぶ先
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [userId])
}